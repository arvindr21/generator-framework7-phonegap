.page(data-page="swiper-3d-coverflow")
  .navbar
    .navbar-inner
      .left
        a(href="swiper.html").back.link.icon-only
          i.icon.icon-back
      .center 3D Coverflow Effect
      .right
        a(href="#").open-panel.link.icon-only
          i.icon.icon-bars
  .page-content
    .swiper-container.swiper-init.ks-demo-slider.ks-coverflow-slider(data-pagination=".swiper-pagination", data-effect="coverflow", data-slidesPerView="auto", data-centeredSlides="true")
      .swiper-pagination
      .swiper-wrapper
        - for (var i = 1; i < 10; i++)
          .swiper-slide(style="background-image:url(http://lorempixel.com/800/800/nature/#{i})") Slide #{i}
    