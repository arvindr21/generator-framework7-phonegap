.page(data-page="virtual-list")
  .navbar
    .navbar-inner
      .left
        a(href="index.html").back.link.icon-only
          i.icon.icon-back
      .center Virtual List
      .right
        a(href="#").open-panel.link.icon-only
          i.icon.icon-bars
