.navbar
  .navbar-inner
    .left.sliding
      a(href="swiper.html").back.link
        i.icon.icon-back
        span Back
    .center.sliding Slider Lazy Loading
    .right
      a(href="#").open-panel.link.icon-only
        i.icon.icon-bars
.pages.navbar-through
  .page(data-page="swiper-horizontal")
    .page-content
      .swiper-container.swiper-init.ks-lazy-slider(data-pagination=".swiper-pagination", data-next-button=".swiper-button-next", data-prev-button=".swiper-button-prev", data-preload-images="false", data-lazy-loading="true")
        .swiper-wrapper
          - for (var i = 1; i <= 10; i++)
            .swiper-slide
              img(data-src="http://lorempixel.com/1600/1200/nature/#{i}").swiper-lazy
              .preloader
        .swiper-pagination.swiper-pagination-white
        .swiper-button-prev.swiper-button-white
        .swiper-button-next.swiper-button-white
          