.navbar
  .navbar-inner
    .left.sliding
      a(href="swiper.html").back.link
        i.icon.icon-back
        span Back
    .center.sliding Vertical Swiper
    .right
      a(href="#").open-panel.link.icon-only
        i.icon.icon-bars
.pages.navbar-through
  .page(data-page="swiper-vertical")
    .page-content
      .swiper-container.swiper-init.ks-demo-slider(data-direction="vertical", data-pagination=".swiper-pagination", data-pagination-hide="true")
        .swiper-pagination
        .swiper-wrapper
          - for (var i = 1; i < 11; i++)
            .swiper-slide Slide #{i}