.navbar
  .navbar-inner
    .left.sliding
      a(href="swiper.html").back.link
        i.icon.icon-back
        span Back
    .center.sliding Custom Controls
    .right
      a(href="#").open-panel.link.icon-only
        i.icon.icon-bars
.pages.navbar-through
  .page(data-page="swiper-custom").no-toolbar
    .page-content
      .ks-slider-custom
        .swiper-container.swiper-init(data-pagination=".swiper-pagination", data-space-between="0", data-next-button=".swiper-button-next", data-prev-button=".swiper-button-prev", data-pagination-clickable="true")
          .swiper-pagination
          .swiper-wrapper
            - for (var i = 1; i < 8; i++)
              .swiper-slide(style="background-image:url(http://lorempixel.com/1024/1024/nightlife/#{i})")
          .swiper-button-prev
          .swiper-button-next
